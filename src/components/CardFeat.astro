---
interface props {
    title: string;
    description: string;
    size?: "small" | "large";
}

const { title } = Astro.props;
const { description } = Astro.props;
const { size } = Astro.props;
const cardClasses = `
    relative rounded-4xl overflow-hidden p-[1px] 
    ${size === "large" ? "lg:col-span-2 lg:row-span-2" : ""}
    bg-gradient-to-br from-[#c59dff]/0 via-[#5424bb]/100 to-black 
    text-white transition-colors duration-300`;
---

<div class={cardClasses}>
    <div class="p-8 relative z-10 bg-black rounded-4xl h-full"> 
        <h3 class={`text-xl font-normal text-[#f8f8ff]`}>{title}</h3> <p class="mt-2 text-neutral-600 text-sm">{description}</p>
    </div>
</div>
