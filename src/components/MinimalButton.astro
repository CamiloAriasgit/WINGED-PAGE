---
interface Props {
  texto: string;
}

const { texto } = Astro.props;
const NUMERO_DE_TELEFONO = "573003607632";
const MENSAJE_PREDETERMINADO =
  "Â¡Hey, quiero convertir visitantes en *clientes* con una landing page!";
const mensajeCodificado = encodeURIComponent(MENSAJE_PREDETERMINADO);
const whatsappUrl = `https://wa.me/${NUMERO_DE_TELEFONO}?text=${mensajeCodificado}`;

const whatsappBorder = `
    relative inline-block rounded-4xl p-[1px]
    bg-gradient-to-b from-neutral-500/70 via-neutral-950/50 to-neutral-500/80
    group
    hover:bg-gradient-to-tr hover:from-neutral-100/40 hover:via-black hover:to-neutral-100 transition-all duration-500
    `;

const whatsappInner = `
    relative z-10
    rounded-4xl
    px-6 py-2 font-light tracking-widest
    text-neutral-200 font-semibold
    bg-neutral-950
    transition-all duration-300
`;
---

<a
  href={whatsappUrl}
  target="_blank"
  rel="noopener noreferrer"
  class={whatsappBorder}
>
    <div class={whatsappInner}>
        {texto}
    </div>
</a>
