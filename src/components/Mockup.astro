---
const mokClasses = `
    relative rounded-4xl p-[1px] 
    bg-gradient-to-b from-violet-800/40 via-indigo-800/40 to-black 
    text-white transition-colors duration-300
    // Tamaño y comportamiento clave para el "icono":
    w-full max-w-sm mx-auto shadow-2xl // Limitamos el ancho máximo a 'sm' para que parezca más un icono
    aspect-video`;

const innerClasses = `
    p-0 relative z-10 bg-black rounded-4xl 
    h-full w-full`;
---
return (
    <section class="py-10 px-4 flex justify-center">
        <div class={mokClasses}>
            <div class={innerClasses}>
            </div>
        </div>
    </section>
);