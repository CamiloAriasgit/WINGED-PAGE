---
import Button from "../components/Button.astro";
import Mockup from "./Mockup.astro";
---

<section
  class="flex items-center min-h-[calc(100vh-1px)] mx-0 bg-gradient-to-b from-[#5424bb]/0 via-black to-[#5424bb]/0"
>
  <div class="container mx-auto text-center">
    <h1
      class="text-3xl tracking-tight font- text-balance text-[#f8f8ff] sm:text-5xl"
    >
      Tu próxima venta <span
        class="bg-clip-text text-transparent
           bg-gradient-to-r from-[#f8f8ff] to-[#c59dff]"
        ><br />comienza aquí</span>
    </h1><br />
    <p class="text-[#f8f8ff]/70 font-light sm:text-xl">
      Convierte clicks en <span class="text-[#c59dff]">clientes</span>
    </p><br /><br />
    <div class="">
      <Button texto="EMPEZAR" />
    </div>
    <div class="mt-15 ">
      <img src="public/images/HeroImagen.png" alt="" class="w-full lg:max-w-xl xl:max-w-xl mx-auto">
    </div>
  </div>
</section>
