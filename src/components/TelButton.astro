---
interface Props {
  texto: string;
}

const { texto } = Astro.props;
const NUMERO_DE_TELEFONO = "573003607632";
const MENSAJE_PREDETERMINADO = "Hola, quiero empezar un nuevo proyecto.";
const mensajeCodificado = encodeURIComponent(MENSAJE_PREDETERMINADO);
const whatsappUrl = `https://wa.me/${NUMERO_DE_TELEFONO}?text=${mensajeCodificado}`;
const estiloBoton = "bg-lime-950 border-1 border-lime-900 text-lime-300 font-semibold text-base px-6 py-2 rounded shadow hover:bg-lime-500 hover-border-lime-500 hover:text-black transition-colors duration-300";
const estiloBotonBlack = "bg-neutral-900/60 backdrop-blur-sm shadow-2xl text-base px-2 py-1 rounded shadow hover:bg-neutral-950 hover:text-[#f8f8ff] transition-colors duration-300";

---

<a href={whatsappUrl} target="_blank" rel="noopener noreferr er" class={estiloBotonBlack}>
  {texto}
</a>
